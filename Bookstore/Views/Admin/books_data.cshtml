@model Bookstore.Models.mainmodel;
@{
    Layout = "../shared/dashbroadlayout.cshtml";

}
<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="icon" href="images/favicon.png" type="image/gif" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Bostorek</title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
    <!-- font awesome style -->
    <link href="css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="css/responsive.css" rel="stylesheet" />
    <style>
        .mybooksection {
            height: 60px;
            width: 103%;
            background-color: #44b89d;
        }

        .mycontainer {
            padding: 30px;
            height: 800px;
        }

        .mybook h2 {
            color: white;
            padding-top: 15px;
            font-weight: bolder;
        }

        .sec {
            height: 500px;
            width: 100%;
            display: flex;
            justify-content: left;
        }

        .box1 {
            height: 100%;
            justify-items: left;
            padding: 30px;
            height: 100%;
       width:50%;
            
        }

            .box1 img {
                width:100%;
               height:400px;
                border-radius: 14px;
                filter: drop-shadow(4px 4px 4px black);
            }

        .box2 {
            height: 100%;
            width: 100%;
            justify-items: left;
            padding: 30px;
          
        }

        .cont {
            width: 100%;
            padding: 15px;
            display: flex;
            gap: 34px;
            flex-wrap: wrap;
        }

        #myc1 {
            height: 10%;
        }

        #myc2 {
           
            height: 10%;
        }

        .mah {
            width: 100%;
            height: 100px;
           /*  background-color: blue; */
            /* display: flex;justify-items: center;
          justify-content: end; */
            text-align: end;
            padding: 30px;
            gap: 10px;
        }

    </style>
</head>

<body>
    <div class="container mycontainer">
        <div class="row mybooksection">
            <div class="col">
                <div class="mybook">
                    <h2>Book details</h2>
                </div>
                <div class="sec">
                    <div class="box1">
                        <img src="@Url.Content("~/books_covers/"+Model.book_data.book_cover)" alt="">
                    </div>
                    <div class="box2">
                        <div class="cont" id="myc1">
                            <h4>Book Name : <Strong>@Model.book_data.name</Strong></h4>

                            <h4>Author Name : 
                                @foreach(var data in Model.auth_details)

                                    {
                                        <Strong>
                                            @data.name
                                        </Strong>
                                    }
                               </h4>
                        </div>
                        <div class="cont" id="myc2">
                            <h4>
                                Genres :  @foreach (var data in Model.genres_details)

                                {
                                    <Strong>
                                        @data.name
                                    </Strong>
                                }
                            </h4>

                            
                        </div>
                        <h3 style="margin-top:50px;">Description</h3>
                        <p>@Model.book_data.description</p>
                        <div class="mah">
                            <div class="bo1"><h5>Qunatity : <strong>@Model.book_data.qunatiy</strong></h5></div>
                            <div class="bo2"><h5>Price :<strong>@Model.book_data.price</strong></h5></div>
                            <div class="bo3"><h2>Total :<strong>@Model.book_data.total</strong></h2></div>
                        </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <!-- end blog section -->
    <!-- info section -->
    <!-- jQery -->
    <script src="js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="js/bootstrap.js"></script>
    <!-- custom js -->
    <script src="js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
    </script>
    <!-- End Google Map -->

</body>

</html>