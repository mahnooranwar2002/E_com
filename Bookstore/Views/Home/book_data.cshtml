            }

                .q-selector button:hover {
                    background-color: #b71c1c;
                    transform: scale(1.05);
                }

            .q-selector input {
                text-align: center;
                width: 50px;
                border: 1px solid #ccc;
                border-radius: 8px;
                height: 40px;
                box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.1);
