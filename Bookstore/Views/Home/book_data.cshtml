            }

        .minus-btn, .plus-btn {
            width: 40px;
            height: 40px;
            font-size: 20px;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            background-color: #44b89d;
            color: #fff;
            cursor: pointer;
        }

            .minus-btn:hover, .plus-btn:hover {
                background-color: #3a7d6c;
                transform: scale(1.05);
            }

