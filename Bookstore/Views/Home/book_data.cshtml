</head>
 @if (TempData["msg1"] != null)
{
        <div class="alert alert-danger" role="alert">
        @TempData["msg1"]
        </div>
}
@if (TempData["msg2"] != null)
{
        <div class="alert alert-success" role="alert">
        @TempData["msg2"]
        </div>
} 
<body>
    <div class="container mycontainer">
        <div class="row mybooksection">

            <div class="sec">
                <div class="box1">
                    <img src="@Url.Content("~/books_covers/"+Model.book_data.book_cover)" alt="">
                </div>
                <div class="box2">
                    <div class="cont" id="myc1">
                        <h4>Book Name : <Strong>@Model.book_data.name</Strong></h4>

                        <h4>
                           Writen By 
                            @foreach (var data in Model.auth_details)

                            {
                                <Strong>
                                    @data.name
                                </Strong>
                            }
                        </h4>
                    </div>
                    <div class="cont" id="myc2">
                        <h4>
                            Genres :  @foreach (var data in Model.genres_details)

                            {
                                <Strong>
                                    @data.name
                                </Strong>
                            }
                        </h4>
                        <h4>
                            Pirce :  <Strong>  @Model.book_data.price</Strong>

                        </h4>
                    </div>


                    <div class="mycon">
                        <h3 class="myh3">Description</h3>
                        <p>@Model.book_data.description</p>
                        <div class="mydiv ">
                            <form method="post" asp-action="add_cart" asp-controller="home" class="f1">
                                <input value="@Model.book_data.id" name="pt_id" type="hidden">
                                <div class="q-selector">

                                    <input type="text" value="1" id="myinput" name="qunatity" required>

                                </div>
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-danger">Add to Cart</button>
                                    <form method="post" asp-action="add_wishlist" asp-controller="home" class="f2">
                                        <input value="@Model.book_data.id" name="p_id" type="hidden">
                                        <button type="submit" class="btn btn-danger">Wish List</button>
                                    </form>
                                </div>
                            </form>
                        </div>


                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- end blog section -->
