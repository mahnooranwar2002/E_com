@{
    Layout = null;
}
@model Bookstore.Models.mainmodel;

<html>
<head>
    <title>
        Payment Method
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
          
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #fff;
            width: 600px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .steps {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .steps div {
                text-align: center;
                flex: 1;
            }

                .steps div span {
                    display: block;
                    width: 30px;
                    height: 30px;
                    line-height: 30px;
                    border-radius: 50%;
                    background-color: #e0f7fa;
                    margin: 0 auto 5px;
                }

                .steps div.active span {
                    color: #fff;
                }

                .steps div.active {
                }

        .payment-methods {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .payment-methods div {
                text-align: center;
                flex: 1;
            }

            .payment-methods img {
                width: 60px;
                height: auto;
            }

            .payment-methods input {
                margin-top: 10px;
            }

        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

            .form-group input, .form-group select {
                width: 48%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

                .form-group input[type="checkbox"] {
                    width: auto;
                }

        .summary {
            background-color: #f9f9f9;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
        }

            .summary div {
                display: flex;
                justify-content: space-between;
                margin-bottom: 5px;
            }

                .summary div:last-child {
                    font-weight: bold;
                }

        .confirm-button {
            background-color: #44b89d;
            color: #fff;
            padding: 15px;
            width: 100%;
            text-align: center;
            border-radius: 4px;
            cursor: pointer;
            border: none;
        }

            .confirm-button:hover {
                background-color: #063547;
            }
    </style>
</head>
<body>
    
    
    <form method="post">

        <div class="payment-methods">
          
            <div>
                    <input value="@Model.admin_profiles.Id" name="user_ids" type="hidden" />
                    <input value="@Model.admin_profiles.Name" name="user_name" type="hidden" />
                    <input value="@Model.admin_profiles.Email" name="user_email" type="hidden" />
                <input id="mastercard" value="mastercard" name="payment" type="radio" />
                <label for="mastercard">
                    <img alt="Mastercard logo" height="40" src="https://storage.googleapis.com/a1aa/image/jXVtynLqaF7nEhGh0g3QuDd2fJjYoJqNojfRarQZG4p439pTA.jpg" width="60" />
                </label>
            </div>
            <div>
                <input id="visa" name="payment" value="visa" type="radio" />
                <label for="visa">
                    <img alt="Visa logo" height="40" src="https://storage.googleapis.com/a1aa/image/LEwxNFodeU1fJkyF1k1F6SmjlCumQTIS4ItbG96YeUE1v7TnA.jpg" width="60" />
                </label>
            </div>
            <div>
                <input id="paypal" name="payment" value="paypal" type="radio" />
                <label for="paypal">
                    <img alt="PayPal logo" height="40" src="https://storage.googleapis.com/a1aa/image/erDPc1efO7Dbtpm9dzLZ5ENfS6r6w3fqVAcDrUrW0vXcfdf0JA.jpg" width="60" />
                </label>
            </div>
            <div>
                <input id="cod" name="payment" value="cod" type="radio" />
                <label for="cod">
                    <img alt="Cash on Delivery logo" height="40" src="https://storage.googleapis.com/a1aa/image/5Md0Q2Jrc0q6CRa1KOBQ6WeiUdpMMRmw3J9myJoXRBy77epTA.jpg" width="60" />
                </label>
            </div>
        </div>
       
            <div class="form-group">
                <input placeholder="Card number*" name="card_num" required type="text" />
                <input placeholder="Cardholder*" required name="card_holder" type="text" />

            </div>
            <div class="form-group">
                <select>
                    <option>
                        Month
                    </option>
                    <option>
                        01
                    </option>
                    <option>
                        02
                    </option>
                    <option>
                        03
                    </option>
                    <option>
                        04
                    </option>
                    <option>
                        05
                    </option>
                    <option>
                        06
                    </option>
                    <option>
                        07
                    </option>
                    <option>
                        08
                    </option>
                    <option>
                        09
                    </option>
                    <option>
                        10
                    </option>
                    <option>
                        11
                    </option>
                    <option>
                        12
                    </option>
                </select>
                <select>
                    <option>
                        Year
                    </option>
                    <option>
                        2023
                    </option>
                    <option>
                        2024
                    </option>
                    <option>
                        2025
                    </option>
                    <option>
                        2026
                    </option>
                    <option>
                        2027
                    </option>
                    <option>
                        2028
                    </option>
                    <option>
                        2029
                    </option>
                    <option>
                        2030
                    </option>
                </select>
            </div>
            <div class="form-group">
                <input placeholder="CVC" name="cvv" type="text" required />

                <input placeholder="address" type="text" name="address" required />
            </div>
            <div class="form-group">
                <input id="save-details" type="checkbox" />
                <label for="save-details">
                    Save my details for future purchases
                </label>
            </div>
            <div class="summary">
                <div>
                    <span>
                        Subtotal (@TempData["cart_count"] items):
                    </span>
                    <span>
                        @TempData["income"]
                    </span>
                </div>
                <div>
                    <span>
                        Home delivery cost:
                    </span>
                    <span>
                        Free
                    </span>
                </div>
                <div>
                    <span>
                        TOTAL AMOUNT:
                    </span>
                    <span>
                        @TempData["income"]
                    </span>
                </div>
            </div>

        <button type="submit" class="confirm-button" onclick="showAlert()">
                CONFIRM PAYMENT
            </button>
       

        
    </div>
    </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function showAlert() {
            Swal.fire({
                title: 'Thankyou !',
                text: 'We sincerely appreciate your support and trust in us. Thank you for being a valued part of our community.',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        }
    </script>
</body>
</html>
